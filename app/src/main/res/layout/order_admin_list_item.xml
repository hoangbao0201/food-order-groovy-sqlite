<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Hình ảnh món ăn -->
        <ImageView
            android:id="@+id/imageViewDishAdminOrder"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"/>

        <!-- Thông tin món ăn -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDishNameAdminOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:text="Món ăn"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/textViewQuantityAdminOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="Số lượng: 2"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/textViewAddressAdminOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="Địa chỉ: 123 Đường ABC"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/textViewPhoneNumberAdminOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="SĐT: 0987654321"
                android:paddingTop="4dp" />

            <!-- Các nút hành động -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/deleteButtonAdminOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xóa"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#F44336"/>

                <Button
                    android:id="@+id/changeStatusButtonAdminOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thay đổi"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
